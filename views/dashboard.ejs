<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Admin Dashboard</title>
</head>
<body>
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-xs-6 mt-3">
          <h1>Admin Dashboard</h1>
        </div>
        <div class="col-sm-6 col-xs-6 mt-3" style="text-align:right;">
          <a href="/admin/" class="btn btn-primary">Logout</a>
        </div>
      </div>
        <div class="mt-5 mb-2">
            <button class="btn btn-primary" onclick="location.href='/dashboard/add-user'">Add User</button>
        </div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">User ID</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
              <tr>
                <th scope="row"><%= index+1 %></th>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.password %></td>
                <td><a href="/dashboard/edit-user?id=<%= user.id %>" class="btn btn-primary">Edit</a></td>
                <td><a href="/dashboard/delete-user?id=<%= user.id %>" class="btn btn-primary">Delete</a></td>
              </tr>
              <% })%>
            </tbody>
          </table>
    </div>
</body>
</html>