<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>User Dashboard</title>
</head>
<body>
    <div class="container">
		<div class="row">
			<div class="col-sm-6 col-xs-6 mt-3">
				<h1>User Dashboard</h1>
			</div>
			<div class="col-sm-6 col-xs-6 mt-3" style="text-align:right;">
				<a href="/login/" class="btn btn-primary">Logout</a>
			</div>
		</div>
        
		<h3 class="mt-5">Biodata</h3>
		
		<% if(usergamebiodatas.length == 0) { %>
            <button class="btn btn-primary" onclick="location.href='/user-dashboard/add-biodata?id=<%= queryid %>'">Add Biodata</button>
		<% } else { %>
        <table class="table">
			<thead>
			  <tr>
				<th scope="col">Name</th>
				<th scope="col">Age</th>
				<th scope="col">Email</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>
			  </tr>
			</thead>
			<tbody>
				<% usergamebiodatas.forEach((usergamebiodata) => { %>
			  <tr>
				<td><%= usergamebiodata.name %></td>
				<td><%= usergamebiodata.age %></td>
				<td><%= usergamebiodata.email %></td>
                <td><a href="/user-dashboard/edit-biodata?id=<%= queryid %>" class="btn btn-primary">Edit</a></td>
                <td><a href="/user-dashboard/delete-biodata?id=<%= queryid %>" class="btn btn-primary">Delete</a></td>
			  </tr>
			  <% })%>
			</tbody>
		</table>
		<% } %>
		
		<div style="clear:both;"></div>
		<a class="mt-5 btn btn-primary" href="/rps?id=<%= queryid %>" target="_new">Play Rock Paper Scissors Game</a>
		
		<h3 class="mt-5">Game History</h3>
        <table class="table">
			<thead>
			  <tr>
				<th scope="col">No</th>
				<th scope="col">Time</th>
				<th scope="col">Result</th>
			  </tr>
			</thead>
			<tbody>
				<% usergamehistories.forEach((usergamehistory, index) => { %>
			  <tr>
				<th scope="row"><%= index+1 %></th>
				<td><%= usergamehistory.time %></td>
				<td><%= usergamehistory.result %></td>
			  </tr>
			  <% })%>
			</tbody>
		</table>
    </div>
</body>
</html>